<div class="form-div mt-5">
  <h2 class="primary-font-color">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "primary-font-color" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "primary-font-color" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "primary-font-color" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn", id: "login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>