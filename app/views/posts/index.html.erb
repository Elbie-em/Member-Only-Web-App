<h1>New Post</h1>

<%= render 'form', post: @post %>


<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.member.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
